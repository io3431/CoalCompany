<Window x:Class="JobCompany.ChangeWeightWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobCompany"
        mc:Ignorable="d"
        Title="Изменение веса" Height="130" Width="670" ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите вес груза:" Style="{StaticResource TextBlockOnAddStock}" Width="230"></TextBlock>
            <TextBox x:Name="WeightTextBox" Text="{Binding Weight}" Style="{StaticResource TextBoxOnAddStock}" Margin="0 0 20 0"></TextBox>
            <Button x:Name="SaveNewWeightBtn" Height="30" Background="{x:Null}" Click="SaveNewWeightBtn_Click">
                <Image Source="\Resources\Jack.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
