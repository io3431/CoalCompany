<Window x:Class="JobCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobCompany"
        mc:Ignorable="d"
        Title="Главная" MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="DarkSlateGray" BorderThickness="1">
            <StackPanel Background="AliceBlue">
                <Button x:Name="AreaBtn" Content="Площадки" Style="{StaticResource ButtonOnMW}" Click="AreaBtn_Click"></Button>
                <Button x:Name="StockBtn" Content="Склады" Style="{StaticResource ButtonOnMW}" Click="StockBtn_Click"></Button>
                <Button x:Name="ChangeHistoryBtn" Content="История" Style="{StaticResource ButtonOnMW}" Click="ChangeHistoryBtn_Click"></Button>
            </StackPanel>
        </Border>
        <Frame x:Name="InfoPage" Grid.Column="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
